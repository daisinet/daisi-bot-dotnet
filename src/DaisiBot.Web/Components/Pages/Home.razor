@page "/"
@inject ISkillService SkillService

<div class="hero">
    <h1>Daisi <span class="accent">Bot</span></h1>
    <p>Discover curated AI skills for your personal agent. Every skill is reviewed and approved for safety.</p>
    <a href="/skills" class="btn btn-accent btn-lg">Browse Skills</a>
</div>

<div class="container">
    <h2 class="font-accent text-center mb-4" style="color: white;">Featured Skills</h2>

    <div class="skill-grid">
        @foreach (var skill in _featuredSkills)
        {
            <div class="glass-card">
                <h4 style="color: white;">@skill.Name</h4>
                <p class="text-muted mb-2">v@(skill.Version) by @skill.Author</p>
                <p>@skill.ShortDescription</p>
                <div class="d-flex flex-wrap gap-1 mb-3">
                    @foreach (var tag in skill.Tags.Take(3))
                    {
                        <span class="badge bg-secondary">@tag</span>
                    }
                </div>
                <div class="d-flex flex-wrap gap-1 mb-3">
                    @foreach (var group in skill.RequiredToolGroups)
                    {
                        var badgeClass = ToolPermissions.IsElevated(group) ? "badge-elevated" : "badge-standard";
                        <span class="badge @badgeClass">@group</span>
                    }
                </div>
                <a href="/skills/@skill.Id" class="btn btn-accent btn-sm">View Details</a>
            </div>
        }
    </div>

    @if (_featuredSkills.Count == 0)
    {
        <div class="text-center py-5">
            <p class="text-muted">No skills available yet. Be the first to <a href="/my-skills/new" class="text-accent">submit a skill</a>!</p>
        </div>
    }

    <div class="text-center mt-5">
        <h3 class="font-accent mb-3" style="color: white;">Categories</h3>
        <div class="d-flex flex-wrap justify-content-center gap-2">
            @foreach (var cat in _categories)
            {
                <a href="/skills?tag=@cat" class="btn btn-outline-light rounded-pill px-4">@cat</a>
            }
        </div>
    </div>
</div>

@code {
    private List<Skill> _featuredSkills = [];
    private readonly string[] _categories = ["productivity", "coding", "research", "writing", "creative", "data", "communication"];

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _featuredSkills = (await SkillService.GetPublicSkillsAsync()).Take(6).ToList();
        }
        catch { }
    }
}
